<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add these permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".CampusRideApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CampusRIde"
        android:configChanges="locale|layoutDirection"
        tools:targetApi="n">


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/purple_500"
            tools:replace="android:resource" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="locale|layoutDirection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".WelcomeActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".UserTypeSelectionActivity"
            android:exported="true"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".DriverRegistrationActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".PassengerRegistrationActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".DriverDashboardActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".PassengerDashboardActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".DriverRidesActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".DriverProfileActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".PassengerRidesActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".WalletActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".PassengerProfileActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".BookRideActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".RideTrackingActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".MapSelectionActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />


        <activity
            android:name=".DriverRideRequestsActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".DriverRideTrackingActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <activity
            android:name=".RideRatingActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection"
            android:label="@string/settings" />

        <!-- Ride History Activity -->
        <activity
            android:name=".RideHistoryActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection" />

    </application>
</manifest>